<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_text_activity_start">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">24sp</item>
    </style>


    <style name="text_view_activity_start">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="btn_style_activity_start">
        <item name="android:background">@drawable/btn_background</item>
        <item name="android:layout_width">123dp</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="onBoarding_item_title_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_start_end_title_text</item>
        <item name="android:layout_marginEnd">@dimen/margin_start_end_title_text</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="item_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#BF7C7D</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>
    <style name="open_item_text_view" parent="item_text_view" >
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">@dimen/padding</item>
    </style>
</resources>